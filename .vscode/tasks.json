{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "ng.watch",
      "group": "none",
      "label": "ng.watch",
      "isBackground": true,
      "detail": "Runs the angular watch task in the background",
      // This task is run before some debug tasks.
      // Problem is, it's a watch script, and since it never exits, VSCode
      // complains. All this is needed so VSCode just lets it run.
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    }
  ]
}
