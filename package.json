{
  "name": "yame",
  "productName": "YAME",
  "version": "0.0.1",
  "description": "A generic extensible 2D map editor for any kind of map.",
  "author": {
    "name": "Heinrich Reich",
    "email": "h.reich90@gmail.com"
  },
  "keywords": [
    "angular",
    "electron",
    "typescript",
    "sass"
  ],
  "main": "./main/main.js",
  "private": true,
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "start": "npm run build.electron && npm run ng.watch",
    "build.common": "tsc -p src/common/tsconfig.app.json",
    "build.electron": "tsc -p src/main/tsconfig.app.json && symlink-dir node_modules out/node_modules && copyfiles package.json config.json out",
    "build.electron.prod": "tsc -p src/main/tsconfig.app.json --outDir dist && copyfiles package.json config.json dist && cd dist && npm install --prod && cd ..",
    "build.ng.prod": "ng build --configuration production --outputPath=dist/ng",
    "build": "ng build --outputPath=out/ng && npm run build.electron",
    "build.prod": "npm run build.ng.prod && npm run build.electron.prod",
    "editor": "npm run build && npm run electron",
    "editor.prod": "npm run build.prod && npm run electron.prod",
    "electron": "electron ./out",
    "electron.prod": "electron ./dist",
    "electron.linux": "npm run build.prod && node package.js --asar --platform=linux --arch=x64",
    "electron.win32": "npm run build.prod && node package.js --asar --platform=win32 --arch=ia32",
    "electron.win64": "npm run build.prod && node package.js --asar --platform=win32 --arch=x64",
    "electron.mac": "npm run build.prod && node package.js --asar --platform=darwin --arch=x64",
    "test": "npm run test:common && npm run test.electron && npm run test.ng",
    "test.ng": "ng test",
    "test.common": "jasmine-ts \"./src/common/**/*.spec.ts\"",
    "test.electron": "jasmine-ts \"./src/main/**/*.spec.ts\" --helper=./src/main/test.ts",
    "ng.watch": "node --max_old_space_size=4096 ./node_modules/@angular/cli/bin/ng build --outputPath=out/ng --watch",
    "ng.watch.prod": "ng build --configuration production --outputPath=out/ng --watch"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "@trixt0r/ecs": "^0.4.3",
    "custom-electron-titlebar": "^3.2.10",
    "eventemitter3": "^3.1.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.2",
    "lodash": "^4.17.21",
    "pixi.js": "^5.3.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.0.3",
    "@angular/animations": "^13.0.2",
    "@angular/cdk": "^13.0.2",
    "@angular/cli": "^13.0.3",
    "@angular/common": "^13.0.2",
    "@angular/compiler": "^13.0.2",
    "@angular/compiler-cli": "^13.0.2",
    "@angular/core": "^13.0.2",
    "@angular/forms": "^13.0.2",
    "@angular/localize": "^13.0.2",
    "@angular/platform-browser": "^13.0.2",
    "@angular/platform-browser-dynamic": "^13.0.2",
    "@angular/router": "^13.0.2",
    "@ant-design/icons-angular": "^12.0.3",
    "@iplab/ngx-color-picker": "^2.2.0",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "@ngxs/store": "^3.7.3",
    "@types/electron": "^1.6.10",
    "@types/fs-extra": "^8.1.0",
    "@types/jasmine": "~3.6.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^14.0.4",
    "@types/uuid": "^8.3.0",
    "@yame/dev": "git+https://github.com/Trixt0r/yame-dev.git#npm",
    "copyfiles": "^2.4.1",
    "cross-env": "5.0.1",
    "electron": "^16.0.5",
    "electron-packager": "^15.4.0",
    "ng-zorro-antd": "^13.0.0",
    "ng2-dnd": "^5.0.2",
    "ngx-pipes": "^2.7.6",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^7.4.0",
    "symlink-dir": "^5.0.1",
    "tslib": "^2.0.0",
    "typescript": "4.4.4",
    "zone.js": "~0.11.4"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "typings": "./typings.d.ts",
  "browser": {
    "fs": false,
    "fs-extra": false,
    "path": false,
    "constants": false,
    "electron": false,
    "module": "module"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "last 2 iOS major versions",
    "Firefox ESR",
    "not IE 11"
  ]
}
